{
  "name": "todos-app",
  "version": "1.0.0",
  "description": "Sample Todos application to be used to explain test automation frameworks",
  "main": "server.js",
  "scripts": {
    "build": "webpack",
    "watch": "webpack --watch",
    "serve": "node .",
    "dev": "concurrently \"npm run watch\" \"npm run serve\"",
    "start": "yarn build && yarn serve",
    "install:cypress": "cd ./frameworks/cypress && yarn install && yarn cy:verify",
    "test": "cd ./frameworks/cypress && yarn test:headless",
    "start-and-test": "start-server-and-test start http://localhost:3030 test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^3.5.0",
    "axios": "^0.17.0",
    "json-server": "^0.12.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "html-webpack-plugin": "^2.30.1",
    "start-server-and-test": "^1.7.1",
    "style-loader": "^0.19.0",
    "webpack": "^3.6.0"
  }
}
